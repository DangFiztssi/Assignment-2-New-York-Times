<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_card_article"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    tools:layout_width="200dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/thumb" />

        <TextView
            android:id="@+id/tvSnippet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/background_snippet"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="@dimen/padding_snippet"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer ac vestibulum turpis, aliquet blandit justo. Pellentesque vitae dolor quis magna bibendum rhoncus non vel turpis. Ut dapibus auctor diam, et pellentesque dolor aliquet et. Integer ut eros dapibus justo tincidunt tempus. Aenean id tortor viverra, rhoncus metus non, congue sem. Donec euismod lobortis pulvinar. Quisque congue hendrerit pulvinar."
            android:textColor="@android:color/white" />
    </FrameLayout>
</android.support.v7.widget.CardView>